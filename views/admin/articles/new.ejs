<%- include ('../../partials//header') %>
<%- include ('../../partials/navbar') %>

<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h2>Novo artigo</h2>
        </div>
        <div class="card-body">
            <form action="/categories/save" method="POST">
                <input type="text" name="title" placeholder="Defina o titulo do artigo" class="form-control">
                <br>
                <textarea name="body" id="article" cols="30" rows="10" class="form-control" placeholder="Escreva o artigo aqui!"></textarea>
                <br>
                <button class="btn btn-success">
                    Cadastrar
                </button>
            </form>
        </div>
    </div>
</div>

<%- include ('../../partials/footer') %>

<script src="/tinymce/js/tinymce.min.js"></script>
<script>
    tinymce.init({
        selector: '#article'
    })
</script>