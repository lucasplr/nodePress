<%- include ('../../partials/header') %>
<%- include ('../../partials/homenavbar') %>

<body>

<div class="container">
    <br>

    <% result.articles.rows.forEach(article => { %>
        <div class="card">
            <div class="card-header">
                <h2><%= article.title %></h2>
            </div>
            <div class="card-body">
                <a class="btn btn-success" href="/<%= article.slug %>">
                    Ler artigo
                </a>
            </div>
        </div>
        <br>
    <% }) %>

    <div class="row">
        <div class="col col-12">

            <% if(result.page > 2) { %>
                <a href="/articles/page/<%= result.page - 1 %>" style="float:left"> Prev </a>
            <% } else if (result.page == 2) { %>
                <a href="/"> Prev </a>
            <% } %>

        <% if(result.next) { %>
        <a href="/articles/page/<%= result.page + 1 %>" style="float:right">Next >>></a>
        <% } %>

        </div>
    </div>

</div>

</body>

<%- include ('../../partials/footer') %>